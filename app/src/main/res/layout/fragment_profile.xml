<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


<TextView
    android:id="@+id/textView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Profile Content"/>

<TextView
    android:id="@+id/profileFirstNameView"
    android:layout_width="177dp"
    android:layout_height="wrap_content"
    android:text="First name view"
    android:layout_marginTop="12dp"
    android:layout_below="@+id/textView2"
    />

<TextView
    android:id="@+id/profileLastNameView"
    android:layout_width="177dp"
    android:layout_height="wrap_content"
    android:text="Last name view"
    android:layout_marginTop="15dp"
    android:layout_below="@+id/profileEditFirstNameView"
    android:layout_alignParentStart="true"
    />

<EditText
android:id="@+id/profileEditFirstNameView"
android:layout_width="103dp"
android:layout_height="20dp"

android:layout_toEndOf="@+id/profileLastNameView"
android:layout_alignTop="@+id/profileFirstNameView"
/>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/profileEditLastNameView"
    android:layout_alignTop="@+id/profileLastNameView"
    android:layout_alignEnd="@+id/profileEditFirstNameView"
    android:layout_toEndOf="@+id/profileLastNameView"
    android:layout_alignBottom="@+id/profileLastNameView"
    />

</RelativeLayout>